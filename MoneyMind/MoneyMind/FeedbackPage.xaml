<Page x:Class="MoneyMind.FeedbackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:MoneyMind"
      Title="FeedbackPage">

    <Grid Background="White">
        <Border Background="White"
                BorderBrush="#DAA520"
                BorderThickness="3"
                CornerRadius="20"
                Padding="40"
                MinWidth="400"
                MaxWidth="800"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto">

                <TextBlock Text="Give us your feedback"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#DAA520"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Title:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TitleInput"
                         FontSize="16"
                         Width="300"
                         Margin="0,0,0,15"
                         Padding="6"/>

                <TextBlock Text="Message:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="MessageInput"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="150"
                         Width="300"
                         FontSize="14"
                         Margin="0,0,0,15"
                         Padding="6"/>

                <TextBlock Text="(Optional) Your Email:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailInput"
                         FontSize="14"
                         Width="300"
                         Margin="0,0,0,25"
                         Padding="6"/>

                <Button Content="Submit"
                        Background="#DAA520"
                        Foreground="White"
                        Padding="10,5"
                        FontWeight="Bold"
                        Width="150"
                        HorizontalAlignment="Center"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        Click="SubmitFeedback"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
