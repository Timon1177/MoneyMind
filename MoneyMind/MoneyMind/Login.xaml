<Window x:Class="MoneyMind.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800" Background="#2C3E50" WindowStartupLocation="CenterScreen">
  <Grid>
    <Border Width="350" Height="300" Background="#ECF0F1" CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center">
      <Grid Margin="20">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="20"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="MoneyMind Login" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <Grid Grid.Row="1">
          <TextBox x:Name="txtUsername" Width="250" Height="35" Background="#FFFFFF" BorderThickness="1"/>
          <TextBlock Text="Benutzername" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
        </Grid>

        <Grid Grid.Row="3">
          <PasswordBox x:Name="txtPassword" Width="250" Height="35" Background="#FFFFFF" BorderThickness="1"/>
          <TextBlock Text="Passwort" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
        </Grid>

        <Button Content="Login" Width="250" Height="40" Background="#2980B9" Foreground="White" FontWeight="Bold" BorderThickness="0" Grid.Row="4" Margin="0,10,0,0" Click="BtnLogin_Click"/>
        <Button Content="Registrieren" Width="250" Height="40" Background="#27AE60" Foreground="White" FontWeight="Bold" BorderThickness="0" Grid.Row="5" Margin="0,10,0,0" Click="BtnRegister_Click"/>
      </Grid>
    </Border>
  </Grid>
</Window>
