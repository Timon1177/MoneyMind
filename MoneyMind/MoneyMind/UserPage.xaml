<Page x:Class="MoneyMind.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyMind"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

  <Grid Background="#F9F9F9">
    <Border Background="White" 
          CornerRadius="15"
          Margin="30"
          Padding="30"
          BorderBrush="#DAA520"
          BorderThickness="2"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Width="450">
      <StackPanel>
        <TextBlock Text="Profile"
                 FontSize="32"
                 FontWeight="Bold"
                 Foreground="#DAA520"
                 TextAlignment="Center"
                 Margin="0,0,0,20"/>

        <!-- First Name -->
        <TextBlock Text="Firstname:" FontWeight="SemiBold" FontSize="16" Foreground="#555"/>
        <TextBlock x:Name="firstname" Text="..." FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Last Name -->
        <TextBlock Text="Lastname:" FontWeight="SemiBold" FontSize="16" Foreground="#555"/>
        <TextBlock x:Name="lastname" Text="..." FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Email -->
        <TextBlock Text="E-Mail:" FontWeight="SemiBold" FontSize="16" Foreground="#555"/>
        <TextBlock x:Name="email" Text="..." FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Username -->
        <TextBlock Text="Username:" FontWeight="SemiBold" FontSize="16" Foreground="#555"/>
        <TextBlock x:Name="username" Text="..." FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
      </StackPanel>
    </Border>
  </Grid>
</Page>