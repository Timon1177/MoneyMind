<Page x:Class="MoneyMind.StockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="StockPage">

    <Grid Background="White">
        <Border Background="White"
                BorderBrush="#DAA520"
                BorderThickness="3"
                CornerRadius="20"
                Padding="40"
                MinWidth="400"
                MaxWidth="800"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                <TextBlock Text="Live Aktienkurse"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#DAA520"
                           Margin="0 0 0 20"
                           TextAlignment="Center"/>

                <ListBox x:Name="StockList"
                         FontSize="16"
                         HorizontalContentAlignment="Center"
                         Height="150"
                         BorderBrush="#DAA520"
                         BorderThickness="1"
                         Margin="0 0 0 20"/>

                <Button Content="Aktualisieren"
                        Click="Refresh_Click"
                        Background="#DAA520"
                        Foreground="White"
                        Padding="10"
                        BorderBrush="Transparent"
                        Width="150"
                        HorizontalAlignment="Center"/>
            </StackPanel>

        </Border>
    </Grid>
</Page>
