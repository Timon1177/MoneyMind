<Page x:Class="MoneyMind.EditUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EditUserPage">

    <Grid Background="#F9F9F9">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">

            <Border Background="White" 
              CornerRadius="15"
              Padding="30"
              BorderBrush="#DAA520"
              BorderThickness="2"
              Width="450">
                <StackPanel>
                    <TextBlock Text="Edit Profile"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#DAA520"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Firstname:" FontWeight="SemiBold" FontSize="16" Foreground="#555"/>
                    <TextBox x:Name="FirstNameInput" FontSize="16" Margin="0,0,0,10"/>

                    <TextBlock Text="Lastname:" FontWeight="SemiBold" FontSize="16" Foreground="#555"/>
                    <TextBox x:Name="LastNameInput" FontSize="16" Margin="0,0,0,10"/>

                    <TextBlock Text="E-Mail:" FontWeight="SemiBold" FontSize="16" Foreground="#555"/>
                    <TextBox x:Name="EmailInput" FontSize="16" Margin="0,0,0,10"/>

                    <TextBlock Text="Username:" FontWeight="SemiBold" FontSize="16" Foreground="#555"/>
                    <TextBox x:Name="UsernameInput" FontSize="16" Margin="0,0,0,10"/>
                </StackPanel>
            </Border>

            <Button Content="Save Changes"
                    Click="SaveChanges_Click"
                    Background="#DAA520"
                    Foreground="White"
                    FontWeight="Bold"
                    Width="180"
                    Height="40"
                    Margin="0,20,0,0"
                    Cursor="Hand"/>

            <Button Content="Cancel"
                    Click="Cancel_Click"
                    Background="Red"
                    Foreground="White"
                    FontWeight="Bold"
                    Width="180"
                    Height="40"
                    Margin="0,10,0,0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>