<Window x:Class="MoneyMind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MoneyMind" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" Background="White">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200"/>
      <!-- Sidebar -->
      <ColumnDefinition Width="*"/>
      <!-- Main content -->
    </Grid.ColumnDefinitions>

    <!-- Sidebar -->
    <StackPanel Background="#DAA520" Grid.Column="0">
      <TextBlock Text="MoneyMind" FontSize="24" FontWeight="Bold" Foreground="White" Margin="20"/>
      <Button Content="🏠 Startseite" Click="NavigateHome_Click" Margin="10" Padding="10"/>
      <Button Content="📊 Einnahmen &amp; Ausgaben" Click="NavigateIncome_Click" Margin="10" Padding="10"/>
      <Button Content="💰 Sparziele" Click="NavigateGoals_Click" Margin="10" Padding="10"/>
      <Button Content="👤 Benutzer" Click="NavigateUser_Click" Margin="10" Padding="10"/>
      <Button Content="🗙 Beenden" Click="ExitApp_Click" Margin="10" Padding="10"/>
    </StackPanel>

    <!-- Hauptanzeigebereich -->
    <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
  </Grid>
</Window>
